<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="pokemon-form-container">
        <div class="pokemon-form-header">
          <h1>TRAINER LOGIN</h1>
        </div>

        <div class="pokemon-form-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <% if flash[:alert] %>
              <div class="pokemon-form-errors mb-4">
                <h3>Error:</h3>
                <ul>
                  <li><%= flash[:alert] %></li>
                </ul>
              </div>
            <% end %>

            <div class="pokemon-form-group">
              <%= f.label :email, class: 'pokemon-form-label' %>
              <%= f.input_field :email,
                          required: true,
                          autofocus: true,
                          class: 'pokemon-form-control',
                          input_html: { autocomplete: "email" } %>
            </div>

            <div class="pokemon-form-group">
              <%= f.label :password, class: 'pokemon-form-label' %>
              <%= f.input_field :password,
                          required: true,
                          class: 'pokemon-form-control',
                          input_html: { autocomplete: "current-password" } %>
            </div>

            <div class="pokemon-form-group">
              <div class="pokemon-toggle-container mt-2">
                <div class="pokemon-radio-group">
                  <%= f.input_field :remember_me, as: :boolean, class: 'pokemon-radio-input', id: 'remember-me' if devise_mapping.rememberable? %>
                  <% if devise_mapping.rememberable? %>
                    <label for="remember-me" class="pokemon-radio-label available">
                      <span class="poke-dot"></span>
                      REMEMBER ME
                    </label>
                  <% end %>
                </div>
              </div>
            </div>

            <%= f.submit "LOG IN", class: "pokemon-form-submit mt-4" %>

            <div class="mt-4 text-center">
              <%= link_to "GO BACK", root_path, class: "pokemon-button back" %>
            </div>
          <% end %>

          <div class="pokemon-links mt-4">
            <%- if devise_mapping.registerable? %>
              <%= link_to "Need a trainer account? Sign up", new_registration_path(resource_name), class: "pokemon-link" %><br />
            <% end %>
            <%- if devise_mapping.recoverable? %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "pokemon-link" %><br />
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
