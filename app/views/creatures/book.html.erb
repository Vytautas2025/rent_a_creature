<div class="container my-4">
  <h1>Book <%= @creature.name %></h1>

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <% if @creature.image_url.present? %>
            <%= image_tag @creature.image_url, class: "img-fluid mb-3" %>
          <% end %>
          <h5 class="card-title"><%= @creature.name %></h5>
          <p class="card-text"><%= @creature.description %></p>
          <p class="card-text"><strong>Price:</strong> $<%= @creature.price %> per day</p>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Book this creature</h5>

          <% if @existing_bookings.any? %>
            <div class="alert alert-info">
              <p><strong>This creature is already booked on these dates:</strong></p>
              <ul>
                <% @existing_bookings.each do |booking| %>
                  <li><%= booking.start_date.strftime("%b %d, %Y") %> to <%= booking.end_date.strftime("%b %d, %Y") %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= simple_form_for @booking, url: create_booking_creature_path(@creature), method: :post do |f| %>
            <% if @booking.errors.any? %>
              <div class="alert alert-danger">
                <h5><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h5>
                <ul>
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :start_date, class: "form-label" %>
              <%= f.date_field :start_date, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :end_date, class: "form-label" %>
              <%= f.date_field :end_date, class: "form-control", required: true %>
            </div>

            <%= f.button :submit, "Request Booking", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to Creature", creature_path(@creature), class: "btn btn-secondary" %>
  </div>
</div>
