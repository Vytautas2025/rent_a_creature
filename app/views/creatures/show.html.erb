<div class="container my-3">
  <div class="row">
    <!-- Left column (creature details) -->
    <div class="col-md-8">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h1 class="card-title mb-3"><%= @creature.name %></h1>

          <%= image_tag cl_image_path(@creature.photo.key), class: "img-fluid my-3 card-image" if @creature.photo.attached? %>

          <h4 class="mb-2">Description:</h4>
          <p class="card-text mb-4"><%= @creature.description %></p>

          <div class="row mb-3">
            <div class="col-md-6">
              <p>
                <strong>Availability:</strong>
                <span class="badge <%= @creature.available ? 'bg-success' : 'bg-danger' %>">
                  <%= @creature.available ? 'Available' : 'Not Available' %>
                </span>
              </p>
            </div>
            <div class="col-md-6">
              <p class="card-text"><strong>Price:</strong> $<%= @creature.price %> per day</p>
            </div>
          </div>

          <% if @creature.user == current_user %>
            <div class="d-flex mt-4 justify-content-start">
              <%= link_to "Edit Creature", edit_creature_path(@creature), class: "btn btn-warning me-2" %>
              <%= link_to "Manage Booking Requests", manage_bookings_creature_path(@creature), class: "btn btn-info" %>
            </div>
          <% elsif user_signed_in? && @creature.available %>
            <div class="d-flex mt-4 justify-content-start">
              <%= link_to "Book This Creature", book_creature_path(@creature), class: "btn btn-primary" %>
            </div>
          <% elsif user_signed_in? %>
            <div class="alert alert-warning mt-3">This creature is currently not available for booking.</div>
          <% else %>
            <div class="alert alert-info mt-3">Please <%= link_to "sign in", new_user_session_path %> to book this creature.</div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right column (owner info, bookings, map) -->
    <div class="col-md-4">
      <!-- Owner Information -->
      <div class="card shadow-sm mb-4">

        <div class="card-body">
          <p><strong>Owner:</strong> <%= @creature.user.email %></p>
          <% if @creature.available %>
            <p class="text-success mb-0"><i class="fa fa-check"></i> Available for booking</p>
          <% else %>
            <p class="text-danger mb-0"><i class="fa fa-times"></i> Not available for booking</p>
          <% end %>
        </div>
      </div>

      <!-- Booking dates if any -->
      <% if @existing_bookings&.any? %>
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">Already Booked Dates</h5>
          </div>
          <div class="card-body p-0">
            <ul class="list-group list-group-flush">
              <% @existing_bookings.each do |booking| %>
                <li class="list-group-item">
                  <%= booking.start_date.strftime("%b %d, %Y") %> to <%= booking.end_date.strftime("%b %d, %Y") %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <!-- Map -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-0">
          <div style="width: 100%; height: 470px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Back to All Creatures", root_path, class: "btn btn-secondary" %>
  </div>
</div>
