<%= simple_form_for (@creature) do |f| %>
  <div class="pokemon-form-group">
    <%= f.label :name, class: 'pokemon-form-label' %>
    <%= f.input_field :name, class: 'pokemon-form-control' %>
  </div>

  <div class="pokemon-form-group">
    <%= f.label :description, class: 'pokemon-form-label' %>
    <%= f.input_field :description, as: :text, class: 'pokemon-form-control' %>
  </div>

  <div class="pokemon-form-group pokemon-address-container" data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <%= f.label :address, class: 'pokemon-form-label' %>
    <%= f.input_field :address,
        class: 'pokemon-form-control d-none',
        data: {address_autocomplete_target: "address"}
    %>
  </div>

  <div class="pokemon-form-group">
    <%= f.label :photo, class: 'pokemon-form-label' %>
    <%= f.input_field :photo, as: :file, class: 'pokemon-form-control' %>
  </div>

  <div class="pokemon-form-group">
    <%= f.label :available, class: 'pokemon-form-label' %>
    <div class="pokemon-toggle-container mt-2">
      <div class="pokemon-radio-group">
        <%= f.radio_button :available, true, class: 'pokemon-radio-input', id: 'available-true' %>
        <label for="available-true" class="pokemon-radio-label available">
          <span class="poke-dot"></span>
          AVAILABLE
        </label>

        <%= f.radio_button :available, false, class: 'pokemon-radio-input', id: 'available-false' %>
        <label for="available-false" class="pokemon-radio-label unavailable">
          <span class="poke-dot"></span>
          UNAVAILABLE
        </label>
      </div>
    </div>
  </div>

  <div class="pokemon-form-group">
    <%= f.label :price, class: 'pokemon-form-label' %>
    <%= f.input_field :price, class: 'pokemon-form-control', min: 0, step: 0.01 %>
  </div>

  <%= f.submit "CREATE CREATURE", class: "pokemon-form-submit mt-4" %>
<% end %>
