<%= simple_form_for (@creature) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :available, as: :radio_buttons, collection: [['available', true], ['unavailable', false]] %>
  <%= f.input :price %>
  <%= f.submit "Create Creature", class: "btn btn-warning"%>
<% end %>
